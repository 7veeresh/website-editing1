// Minimal replacement script for Firebase Studio preview
(function () {
  function ready(fn) {
    if (document.readyState !== 'loading') {
      fn();
    } else {
      document.addEventListener('DOMContentLoaded', fn);
    }
  }

  ready(function () {
    // Indicate JS loaded
    console.log('[preview] App script loaded');

    // Provide small UI hook so the page remains interactive
    const status = document.getElementById('status-content');
    if (status) {
      const info = document.createElement('div');
      info.className = 'info';
      info.innerHTML = '<strong>Info:</strong> Local preview JS is active';
      status.appendChild(info);
    }
  });
})();